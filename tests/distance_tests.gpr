with "config/distance_tests_config.gpr";
with "aunit";
with "../distance.gpr";

project Distance_Tests is

   for Source_Dirs use ("src/", "src/**", "config/");
   for Object_Dir use "obj/" & Distance_Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("test_runner.adb");

   package Compiler is
      for Default_Switches ("Ada") use Distance_Tests_Config.Ada_Compiler_Switches & ("-gnatyM120");
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

   package Format is
      for Width ("Ada") use "119";
      for Charset ("Ada") use "utf-8";
   end Format;

end Distance_Tests;
